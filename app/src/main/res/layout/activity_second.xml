<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity"
    android:background="@color/lemon"
    android:id="@+id/secondActivity">


    <TextView
        android:layout_width="300sp"
        android:layout_height="50sp"
        android:text="Hello! I am Zack"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="25dp"
        android:gravity="center" />


    <TextView
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="I have a friend Jack next door"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:textSize="25dp"
        android:gravity="center" />


    <Button
        android:id="@+id/funZack"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Start Fun"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:textSize="25dp" />

    <Button
        android:id="@+id/endFun"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="End Fun"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:textSize="25dp" />


    <Button
        android:id="@+id/mailZack"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Mail to Jack"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="310dp"
        android:textSize="25dp" />

    <Button
        android:id="@+id/meetJack"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Back to Jack"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="390dp"
        android:textSize="25dp" />



</RelativeLayout>